{
    "name": "connorhu/khvpos",
    "description": "Helper tools for working with K&H src/VPos",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=8.2",
        "psr/http-client": "^1.0",
        "ext-openssl": "*",
        "symfony/validator": "^5.4 || ^6.4 || ^7.0",
        "symfony/serializer": "^5.4 || ^6.4 || ^7.0",
        "symfony/property-access": "^5.4 || ^6.4 || ^7.0"
    },
    "require-dev": {
        "symfony/http-client": "^6.4 || ^7.0",
        "symfony/var-dumper": "^6.4 || ^7.0",
        "nyholm/psr7": "^1.3",
        "phpunit/phpunit": "^9",
        "symfony/dependency-injection": "^6.4 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "KHTools\\VPos\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KHTools\\Tests\\": "tests/Tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html=tests/coverage",
        "coverage:clover": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-clover=coverage.xml"
    }
}
